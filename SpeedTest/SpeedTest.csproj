<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Authors>Uladzimir Kazakevich,Brendan Grant,Chino Chang</Authors>
    <Description>SpeedTest.Net client library to test internet bandwidth using speedtest.net</Description>
    <PackageTags>speedtest,speedtest.net</PackageTags>

    <TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>

    <AssemblyName>SpeedTest</AssemblyName>
    <RootNamespace>SpeedTest</RootNamespace>

    <IsPackable>true</IsPackable>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="..\LICENSE">
      <Link>LICENSE</Link>
    </Content>
  </ItemGroup>

</Project>
